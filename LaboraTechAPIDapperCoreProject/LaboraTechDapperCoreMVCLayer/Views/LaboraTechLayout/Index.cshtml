@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("HeadViewComponentPartial")

<body>
	<!-- Spinner Start -->
	<div id="spinner"
		 class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
		<div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
	</div>
	<!-- Spinner End -->
	<!-- Topbar Start -->
	@await Component.InvokeAsync("TopBarViewComponentPartial")
	<!-- Topbar End -->
	<!-- Brand Start -->
	@await Component.InvokeAsync("BrandViewComponentPartial")
	<!-- Brand End -->
	<!-- Navbar Start -->
	@await Component.InvokeAsync("NavbarViewComponentPartial")
	<!-- Navbar End -->
	<!-- Carousel Start -->
	<section id="home">
		@await Component.InvokeAsync("HomeViewComponentPartial")
	</section>
	<!-- Carousel End -->
	<!-- About Start -->
	<section id="about">
		@await Component.InvokeAsync("AboutViewComponentPartial")
	</section>
	<!-- About End -->
	<!-- Service Start -->
	<section id="service">
		@await Component.InvokeAsync("ServiceViewComponentPartial")
	</section>
	<!-- Service End -->
	<!-- Team Start -->
	<section id="team">
		@await Component.InvokeAsync("TeamViewComponentPartial")
	</section>
	<!-- Team End -->
	<!-- Testimonial Start -->
	<section id="testimonial">
		@await Component.InvokeAsync("TestimonialViewComponentPartial")
	</section>
	<!-- Testimonial End -->

	<!-- Footer Start -->
	<section id="address">
		@await Component.InvokeAsync("FooterViewComponentPartial")
	</section>
	<!-- Footer End -->

	<!-- Back to Top -->
	<a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="bi bi-arrow-up"></i></a>

	<!--Script Start-->
	@await Component.InvokeAsync("ScriptViewComponentPartial")
</body>

</html>
