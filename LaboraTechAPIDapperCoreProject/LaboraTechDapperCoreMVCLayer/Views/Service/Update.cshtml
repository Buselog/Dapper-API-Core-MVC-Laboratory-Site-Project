@model LaboraTechDapperCoreMVCLayer.Models.Services
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="update-form-container">
	<div class="frosted-form-box fade-slide">
		<h2 class="form-title">Update Service Item</h2>


		<form asp-action="Update" asp-controller="Service" method="post">

			@Html.HiddenFor(m => m.ServicesId)

			<div class="form-group mb-3">
				<label asp-for="Title" class="form-label">Service Title</label>
				<input asp-for="Title" class="form-control form-input" />
			</div>

			<div class="form-group mb-3">
				<label asp-for="ShortDescription" class="form-label">Short Description</label>
				<textarea asp-for="ShortDescription" class="form-control form-input" rows="3"></textarea>
			</div>

			<div class="form-group mb-3">
				<label asp-for="Icon" class="form-label">Service Icon</label>
				<input asp-for="Icon" class="form-control form-input" />
			</div>


			<button type="submit" class="btn btn-update">Update</button>
		</form>
	</div>
</div>

