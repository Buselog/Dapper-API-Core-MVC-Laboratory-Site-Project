@model LaboraTechDapperCoreMVCLayer.Models.Address
<div class="container-fluid footer position-relative bg-dark text-white-50 py-5 wow fadeIn" data-wow-delay="0.1s">
	<div class="container">
		<div class="row g-5 py-5">
			<div class="col-12 text-center">
				<a href="index.html" class="navbar-brand d-inline-block">
					<h1 class="h1 text-primary mb-0">Labora<span class="text-white">Tech</span></h1>
				</a>
				<p class="fs-5 mb-4 mt-3 fw-semibold">Next-Gen Lab Solutions.</p>
				<p class="fs-6"><i class="fa fa-map-marker-alt me-3"></i>@Model.Location</p>
				<p class="fs-6"><i class="fa fa-phone-alt me-3"></i>+@Model.Phone</p>
				<p class="fs-6"><i class="fa fa-envelope me-3"></i>@Model.Mail</p>

				<div class="d-flex justify-content-center mt-4">
					<a class="btn btn-lg-square btn-primary me-2" href="#home"><i class="fab fa-linkedin-in"></i></a>
					&nbsp;
					<a class="btn btn-lg-square btn-primary me-2" href="#home"><i class="fab fa-youtube"></i></a>
					&nbsp;
					<a class="btn btn-lg-square btn-primary me-2" href="#home"><i class="fab fa-instagram"></i></a>
					&nbsp;
					<a class="btn btn-lg-square btn-primary me-2" href="#home"><i class="fab fa-facebook-f"></i></a>
				</div>

				<div class="d-flex justify-content-center mt-4 gap-3">
					<a class="custom-btn custom-update" href="/Address/Update/@Model.AddressId">
						<i class="bi bi-pencil me-2"></i> Update
					</a>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="container-fluid copyright bg-dark text-white-50 py-4">
	<div class="container">
		<div class="row">
			<div class="col-md-6 text-center text-md-start">
				<p class="mb-0">&copy; <a href="#">@Model.SiteTitle</a>. All Rights Reserved.</p>
			</div>
		</div>
	</div>
</div>
