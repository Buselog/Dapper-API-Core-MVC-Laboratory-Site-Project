@model LaboraTechDapperCoreMVCLayer.Models.Team
@{
	ViewData["Title"] = "Update";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="update-form-container">
	<div class="frosted-form-box fade-slide">
		<h2 class="form-title">Update Team Member</h2>


		<form asp-action="Update" asp-controller="Team" method="post">

			@Html.HiddenFor(m => m.TeamId)

			<div class="form-group mb-3">
				<label asp-for="Name" class="form-label">Member Name</label>
				<input asp-for="Name" class="form-control form-input" />
			</div>

			<div class="form-group mb-3">
				<label asp-for="ServicesId" class="form-label">Service</label>
				<select asp-for="ServicesId" class="form-control">
					<option value="">-- Select Service --</option>
					@foreach (var service in ViewBag.ServiceList)
					{
						<option value="@service.ServicesId">@service.Title</option>
					}
				</select>
			</div>

			<div class="form-group mb-3">
				<label asp-for="SocialMedia" class="form-label">Social Media</label>
				<input asp-for="SocialMedia" class="form-control form-input" />
			</div>

			<div class="form-group mb-3">
				<label asp-for="Image" class="form-label">Member Image</label>

				<div class="d-flex align-items-stretch gap-3">
					<img src="@Model.Image" style="width: 100px; height: 100px; object-fit: cover; border-radius: 6px;" />

					<textarea asp-for="Image" class="form-control form-input" style="height: 100px;"></textarea>
				</div>
			</div>

			<button type="submit" class="btn btn-update">Update</button>
		</form>
	</div>
</div>

